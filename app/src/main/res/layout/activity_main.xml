<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/loss">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1"
                android:id="@+id/player1"
                android:textSize="8pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 20"
                android:id="@+id/player1score"
                android:textSize="8pt"
                android:layout_marginLeft="20pt" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="+1"
                android:id="@+id/onePlus1" />

            <Button
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:text="+5"
                android:id="@+id/onePlus5" />

            <Button
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:text="-1"
                android:id="@+id/oneMinus1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5"
                android:id="@+id/oneMinus5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:id="@+id/player2"
                android:textSize="8pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 20"
                android:id="@+id/player2score"
                android:textSize="8pt"
                android:layout_marginLeft="20pt" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="+1"
                android:id="@+id/twoPlus1" />

            <Button
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:text="+5"
                android:id="@+id/twoPlus5" />

            <Button
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:text="-1"
                android:id="@+id/twoMinus1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5"
                android:id="@+id/twoMinus5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 3"
                android:id="@+id/player3"
                android:textSize="8pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 20"
                android:id="@+id/player3score"
                android:textSize="8pt"
                android:layout_marginLeft="20pt" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="+1"
                android:id="@+id/threePlus1" />

            <Button
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:text="+5"
                android:id="@+id/threePlus5" />

            <Button
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:text="-1"
                android:id="@+id/threeMinus1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5"
                android:id="@+id/threeMinus5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 4"
                android:id="@+id/player4"
                android:textSize="8pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 20"
                android:id="@+id/player4score"
                android:textSize="8pt"
                android:layout_marginLeft="20pt" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="+1"
                android:id="@+id/fourPlus1" />

            <Button
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:text="+5"
                android:id="@+id/fourPlus5" />

            <Button
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:text="-1"
                android:id="@+id/fourMinus1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5"
                android:id="@+id/fourMinus5" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loss"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
